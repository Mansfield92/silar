{% extends 'header.twig' %}
{% block body %}
<section>
    <div class="container">
        <button onclick="window.location.replace('/tests-add')" class="btn-actions btn-add ajax-action btn-basic"> Přidat test</button>
        <div class="search-row">
                <input type="text" placeholder="Filtrace testů" class="form-control" id="search">
            </div>
            <div class="users-list">
                {% for item in rows %}
                    <div class="users-list_item">
                        <div class="users-list_item_column">
                            <div class="users-list_item_text">
                                {{ item.name }}
                            </div>
                        </div><div class="users-list_item_column">
                            <div class="users-list_item_text">
                                {{ item.timelimit}}
                            </div>
                        </div>{% if username == 'admin' %}<div class="users-list_item_column users-list_item_column-small">
                            <img alt="icon" src="icons/search.svg">
                        </div><div class="users-list_item_column users-list_item_column-small">
                            <a href="/delete-test?id_test={{ item.id_test }}"> <img alt="icon" src="icons/delete.svg"></a>
                        </div>{% else %}<div class="users-list_item_column users-list_item_column-small">
                    {#<img alt="icon" src="icons/search.svg">#}Start
                    </div><div class="users-list_item_column users-list_item_column-small">
                    <a href="/results-list?user={{ username }}"> <img alt="icon" src="icons/search.svg"></a>
                    </div>
                    </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}